extends layout.pug

block content
    .jumbotron#title
        h1 My Events
        a#mainbut.btn.btn-default(href='./createEvent' role='button') Create Event
        a#mainbut.btn.btn-default(href='./join' role='button') Join Event
        a#mainbut.btn.btn-default(href='./home' role='button') Home
        a#mainbut.btn.btn-default(href='./' role='button') Logout


    .container#events

    script.
        $(document).ready(function () {
            var events = !{myEvents};
            console.log(events);
            var loc;
            var name;
            $.each(events, function (key, value) {
                loc = value.location;
                if (loc != null) {
                    loc = loc.toString();
                    loc = loc.split('_').join(' ');
                } else {
                    loc = 'Not Available';
                };
                name = value.name;
                if (name != null) {
                    name = name.toString();
                    name = name.split('_').join(' ');
                } else {
                    name = 'Not Available';
                };

                var r = $(' <div class = "container" id = "myEvents"><p>'
                    + 'Event Name: ' + name + '<br>'
                    + 'Max Number of Players: ' + value.maxppl + '<br>'
                    + 'Date: ' + value.date + '<br>'
                    + 'Location: ' + loc + '<br>'
                    + '</div></p><br>');
                console.log(r);
                $('#events').append(r);
            });
        });

